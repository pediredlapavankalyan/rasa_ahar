<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="create_menu_table" author="pavan_kalyan">
        <createTable tableName="MENU" >
            <column name="id" type="int"  autoIncrement="true" startWith="200001" incrementBy="1" >
                <constraints primaryKey="true"/>
            </column>
           <column name="restaurant_id" type="int" >
               <constraints nullable="false" />
           </column>
            <column name="dish_name" type="varchar"><constraints nullable="false"/></column>
            <column name="price" type="decimal(10,2)" defaultValue="0.0" />

        </createTable>
        <rollback>
            <dropTable tableName="MENU"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
