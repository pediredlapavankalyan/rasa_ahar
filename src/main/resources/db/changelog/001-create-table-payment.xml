<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="create_payment_table" author="pavan_kalyan">
        <createTable tableName="PAYMENT" >
            <column name="id" type="int"  autoIncrement="true" startWith="500015" incrementBy="10" >
                <constraints primaryKey="true"/>
            </column>
            <column name="order_id" type="int"><constraints nullable="false" unique="true" /></column>
            <column name="payment_mode" type="varchar(100)"><constraints nullable="false" /></column>
            <column name="amount" type="decimal(10,2)" defaultValue="0.0" />
            <column name="status" type="varchar(100)"><constraints nullable="false" /></column>
        </createTable>
        <addForeignKeyConstraint baseTableName="PAYMENT" baseColumnNames="order_id" constraintName="fk_payment_order" referencedTableName="ORDERS"
                                 referencedColumnNames="id"/>
        <rollback>
            <dropTable tableName="PAYMENT"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
